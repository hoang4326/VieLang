<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        var status = '<%- JSON.stringify(status) %>';
        if (JSON.parse(status) == "verified"){
            if (confirm ("Do you want to login?")){
                window.location.href = "http://localhost:5000/";
            }
        }
    </script>
</head>
<body>
    <div className="ForgotPassForm">
        <form className="ForgotPassword" method="post" >
            <!-- <h1 className='ForgotPassword'>Forgot Password</h1> -->
            <label htmlFor="name" className="name">Password:</label>
            <input 
                type="password"
                class="ForgotPassForm"
                name="password"
                id="password"
                />
            <label htmlFor="name" className="name">Confirm Password:</label>
            <input 
                type="password"
                class="ForgotPassForm"
                name="confirm-password"
                id="confirm-password"
                />
            <!-- <button type="submit" value="submit">Submit</button> -->
            <input type="submit" value="submit"/>
        </form>
    </div>
</body>
</html>